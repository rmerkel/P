{
    "version": "2.0.0",
    "tasks": [
        {
            // makes the default target (all)
            "label": "make",
            "command": "make",
            "group": "build",
            "type": "shell",
            "problemMatcher": { 
                "base": "$gcc",
                "fileLocation": ["relative", "%{workspaceRoot}"]
            }
        },
        {

            "group": "build",
            "type": "shell",
            "problemMatcher": { 
                "base": "$gcc",
                "fileLocation": ["relative", "%{workspaceRoot}"]
            }
        },
        {
            // makes the test target
            "label": "test",
            "command": "make",
            "args": ["test"],
            "group": "test",
            "type": "shell",
            "problemMatcher": { 
                "base": "$gcc",
                "fileLocation": ["relative", "%{workspaceRoot}"]
            }
        }
    ]
}